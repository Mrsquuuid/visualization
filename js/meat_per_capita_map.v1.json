{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 300,
  "config": {
    "background": "#000000",
    "title": {
      "font": "Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif",
      "fontSize": "40",
      "color": "aliceblue",
      "align": "center"
    },
    "legend": {
      "labelFont": "Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif",
      "labelColor": "aliceblue",
      "labelFontSize": "13",
      "titleFont": "sans-serif",
      "titleFontSize": "15",
      "titleColor": "aliceblue"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Mrsquuuid/visualization/master/js/onlyAsia.topojson",
    "format": {"type": "topojson", "feature": "custom"}
  },
  "transform": [
    {
      "lookup": "properties.admin",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Mrsquuuid/visualization/master/data/meatPerPerson.csv"
        },
        "key": "Area",
        "fields": ["Meat per Capita"]
      }
    }
  ],
  "projection": {"type": "equalEarth"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Meat per Capita",
      "type": "quantitative",
      "title": "kg",
      "scale": {
        "type": "threshold",
        "domain": [1, 10, 20, 30, 40, 50, 60],
        "range": [
          "#ffffe5",
          "#fff7bc",
          "#fee391",
          "#fec44f",
          "#fe9929",
          "#ec7014",
          "#cc4c02",
          "#8c2d04"
        ]
      }
    },
    "tooltip": [
      {"field": "properties.admin", "type": "nominal", "title": "Country"},
      {
        "field": "Meat per Capita",
        "type": "quantitative",
        "title": "Kg of meat Per person"
      }
    ]
  },
  "view": {"stroke": null}
}